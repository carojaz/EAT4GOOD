<div class="container-user">
  <h1>Choose your challenge</h1>
  <div class="edit-info">
    <div class="week-obj">
      <div class="objective-setting">
        <div class="challenge">
          <div class="challenger1">
            <%= cl_image_tag @friend.first.friend1_user.photo.key, :transformation=>[
                    {:width=>400, :height=>400, :gravity=>"face", :radius=>"max", :crop=>"crop"},
                    {:width=>200, :crop=>"scale"}
                    ], class: "avatar-friend-list" %>
            <h5 class="friend-name"><%= @friend.first.friend1_user.nickname %></h5>
          </div>
          <div class="arrow-challenge"><i class="fas fa-arrows-alt-h"></i></div>
          <div class="challenger2">
            <%= cl_image_tag @friend.first.friend2_user.photo.key, :transformation=>[
                    {:width=>400, :height=>400, :gravity=>"face", :radius=>"max", :crop=>"crop"},
                    {:width=>200, :crop=>"scale"}
                    ], class: "avatar-friend-list" %>
            <h5 class="friend-name"><%= @friend.first.friend2_user.nickname %></h5>
          </div>
        </div>
        <%= simple_form_for @challenge do |f| %>
          <h4>How many Veggie meals next week ?</h4>
          <div id="target-veggies-days" class="new-target"></div>
          <%= f.input :nb_days_veggie, as: :range, input_html: { min:0, max:21 }, label: false %>
          <%= f.input :message, label: false, placeholder: "Write message to challenge your friend!", as: :text, :input_html => { :cols => 20, :rows => 10 } %>
          <%= hidden_field_tag(:format, params[:format]) %>
          <%= f.submit 'Send challenge', class: "btn-white h5" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
