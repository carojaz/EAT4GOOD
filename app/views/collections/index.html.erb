<h1 class="mt-3 pb-2">Badges Collection</h1>
  <div class="card-index">
    <div class="row pb-3">
      <% @badges.each do |badge| %>
        <% @collection = Collection.find_by(badge: badge, user: current_user) %>
        <% if badge.target > @collection.counter %>
          <div class="avatar-large-badge col-4">
            <p class="badge-name"><%=badge.name%></p>
            <div class="avatar-index-badge">
            <%= link_to image_tag(badge.picture_path), collection_path(badge) %>
            </div>
          </div>
        <% else %>
          <div class="avatar-large-badge-complete col-4">
            <p class="badge-name"><%=badge.name%></p>
            <div class="avatar-index-badge">
            <%= link_to image_tag(badge.picture_path), collection_path(badge) %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
